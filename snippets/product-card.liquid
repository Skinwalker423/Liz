<div class="w-full py-6 px-3">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-80 object-cover hover:scale-110 transition-transform"
            src="{{ product_product.featured_image | img_url: 'medium' }}"
            alt="{{ product_product.featured_image.alt }}">
        </div>
      {% else %}
        {{ "product-4" | placeholder_svg_tag: "w-full h-80 object-cover bg-gray-100" }}

      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      {% if section.settings.display_vendor == true %}
        <span class="text-gray-400 text-sm">Vendor: {{ product_product.vendor }}</span>
      {% endif %}
      <h1>{{ product_product.title }}</h1>
      <p>{{ product_product.price | money_with_currency }}</p>
      <a class="text-red-600" href="{{ product_product.url }}">See details</a>
    </div>
  </div>
</div>