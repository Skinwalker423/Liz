<article
  itemscope
  itemtype="https://schema.org/BlogPosting"
  class="py-8">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
          <h1 itemprop="headline" class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
        </div>
      </div>

      {% when 'article_author' %}
      <div
        itemscope
        itemtype="https://schema.org/Person"
        class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_author == true %}
            <small itemprop="author">{{ article.author }}</small>
          {% endif %}
        </div>
      </div>

      {% when 'article_published_date' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.enable_published_date == true %}
            <time itemprop="datePublished" datetime="{{ article.published_at | date: '%Y-%m-%d'  }}">{{ article.published_at | date: format: 'on_date' }}</time>
          {% endif %}
        </div>
      </div>

      {% when 'featured_image' %}
      <div itemprop="image" class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
        {% if article.image != blank %}
          <img
            class="w-full h-80 md:h-96 object-cover object-center"
            src="{{ article.image | img_url: 'large' }}"
            alt="{{ article.image.alt }}">
        {% else %}
          {% assign placeholder_image = 'lifestyle-1' %}
          {{ placeholder_image | placeholder_svg_tag: "w-full h-80 md:h-96 object-cover object-center p-5" }}
        {% endif %}
      </div>
      {% when 'article_content' %}
      <div itemprop="articleBody" class="flex items-center justify-center">
        <div class="max-w-4xl md:px-0 px-5">
          {{ article.content }}
        </div>
      </div>


  {% else %}

    {% endcase %}
  {% endfor %}

</article>

{% if blog.comments_enabled? %}
  <div id="comments" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-centered justify-center mx-auto max-w-4xl px-4">
        <h1 class="text-lg mb-4 font-medium">
          See what users are saying
        </h1>
        {% paginate article.comments by 3 %}

          {% for post in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ post.author }}</span>
              <span class="text-xs text-gray-400">{{ post.created_at | date: format: 'on_date' }}</span>
              <p class="text-sm">{{ post.content }}</p>
            </div>
          {% endfor %}
          {% if paginate.pages > 1 %}
            {{ paginate | default_pagination }}
          {% endif %}
        {% endpaginate %}

      </div>

    {% else %}
      <div>
        No Comment
      </div>

    </div>
  {% endif %}
  <div id="comment_form" class="my-8">
    {% form 'new_comment', article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
        {% if form.errors %}
          <div class="border bg-red-100 border-red-800 p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                {% render 'icon-failed' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Oh no! Your comment was not posted
              </div>
            </div>
            <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                <li>
                  <span>{{ form.errors.messages[error] }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% elsif form.posted_successfully? %}
          <div class="flex border bg-green-100 border-green-800 flex-row items-center w-full my-3 p-5">
            <div class="text-green-500">
              {% render 'icon-success' %}
            </div>
            <div class="text-sm font-medium ml-3">Comment is posted successfully</div>
          </div>
        {% endif %}

        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-1/2">
            <label class="text-gray-700 font-medium uppercase text-xs mb-2" for="comment_author">Name</label>
            <input
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              type="text"
              name="comment[author]"
              id="comment_author"
              placeholder="John Doe"
              required>
          </div>
          <div class="px-3 md:w-1/2">
            <label class="text-gray-700 font-medium uppercase text-xs mb-2" for="comment_email">Email</label>
            <input
              class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
              type="email"
              name="comment[email]"
              id="comment_email"
              placeholder="123@gmail.com"
              required>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="px-3 md:w-full">
            <label class="text-gray-700 font-medium resize-none uppercase text-xs mb-2" for="comment_content">Comment</label>
            <textarea
              class="w-full text-gray-700 border py-2 px-3 h-20 focus:outline-none"
              name="comment[body]"
              id="comment_content"
              required
              placeholder="Comment your thoughts on the article"></textarea>
          </div>
        </div>
        <div class="px-1 md:flex mb-3">
          <div class="md:w-full px-3">
            <input
              type="submit"
              class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
              value="Post comment">
          </div>
        </div>
      </div>
    {% endform %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name",
        "info": "check the box to have the author name visible"

      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Date/Time",
        "info": "check the box to have the published date/time visible"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1

      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]

  }
{% endschema %}