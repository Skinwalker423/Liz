<div class="px-4 py-8">
  <h1 class="text-3xl text-center">{{ collection.title }}</h1>
  {% paginate collection.products by section.settings.pagination_quantity %}
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for product in collection.products %}
          {% if product != blank %}
            {% render 'product-card', product_product: product %}
          {% else %}
            <p>Sorry, no products available right now</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="max-w-6xl mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}
</div>
{% schema %}
  {
    "name": "Template Collection",
    "settings": [
      {
        "type": "range",
        "id": "pagination_quantity",
        "label": "Pagination Quantity",
        "info": "Choose the number of products to display per page",
        "default": 6,
        "max": 12,
        "min": 3,
        "step": 1
      }
    ]
  }
{% endschema %}