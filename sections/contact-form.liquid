<div class="flex flex-col items-center my-8">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
  {% endif %}
  {% form 'contact' %}
    <div class="max-w-6xl mx-auto justify-center flex flex-col items-center px-4">
      {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row items-center w-full my-3">
            <div class="text-red-500">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">
              Oh no! Your message was not sent
            </div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>
                <span>{{ form.errors.messages[error] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row items-center w-full my-3 p-5">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">Your message was successfully sent</div>
        </div>
      {% endif %}
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            id="contact_name"
            required
            type="text"
            name="contact[name]">
        </div>
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
          <input
            class="border py-3 px-4 mb-3 text-gray-700 w-full"
            id="contact_email"
            required
            type="email"
            name="contact[email]">
          <div class="px-3 md:w-full"></div>
        </div>
      </div>
      <div class="flex px-1 mb-3 w-full">
        <div class="w-full px-3">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message</label>
          <textarea
            class="w-full text-gray-700 border py-2 px-3 h-20 focus:border-red-500"
            id="contact_message"
            name="contact[body]"
            required
            placeholder="Details on contact info"
            rows="10"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3 w-full">
        <div class="w-full px-3">
          <input
            type="submit"
            class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500"
            value="Submit">
        </div>
      </div>
    </div>

  {% endform %}
</div>


{% schema %}
  {
    "name": "Contact Form",
    "presets": [
      {
        "name": "Contact Form"
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Form Title"
      }
    ]
  }
{% endschema %}