<div class="py-8">
  {% paginate blog.articles by {{ section.settings.number_of_blog_posts }} %}
    <h1 class="text-center
      text-3xl">{{ blog.title }}</h1>
    <div class="max-w-6xl
        mx-auto">
      <div class="grid
          grid-cols-1
          md:grid-cols-3
          gap-4">
        {% for article in blog.articles %}
          <div class="w-full
              py-6
              px-3">
            <div class="bg-white
                shadow-xl
                rounded-lg
                overflow-hidden">
              {% if article.image != blank %}
                <img
                  class="w-full h-80 object-cover"
                  src="{{ article.image | img_url: 'medium' }}"
                  alt="{{ article.image.alt }}">
              {% else %}
                {{ "image" | placeholder_svg_tag: "w-full h-80 object-cover bg-gray-100" }}
              {% endif %}
              {% if section.settings.enable_description_preview == true %}
                <div class="p-4">
                  <h1 class="text-xl
                    font-medium
                    my-4">{{ article.title }}</h1>
                  {% if article.excerpt.size > 0 %}
                    <p>{{ article.excerpt | strip_html | truncatewords: 15, '...' }}</p>
                  {% else %}
                    <p>{{ article.content | strip_html | truncatewords: 15, '...' }}</p>

                    <button class="my-4">
                      <a href="{{
                        article.url
                        }}"class="text-white
                        bg-blue-700
                        hover:bg-blue-800
                        focus:ring-4
                        focus:ring-blue-300
                        font-medium
                        rounded-lg
                        text-sm
                        px-5
                        py-2.5
                        mr-2
                        mb-2
                        dark:bg-blue-600
                        dark:hover:bg-blue-700
                        focus:outline-none
                        dark:focus:ring-blue-800">{{ section.settings.button_text }}
                      </a>
                    </button>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="max-w-6xl
        mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  {% endpaginate %}

</div>

{% schema %}
  {
    "name": "Template Blog",
    "tag": "section",
    "class": "flex justify-center items-center",
    "settings": [
      {
        "type": "range",
        "id": "number_of_blog_posts",
        "label": "Number of Blog Posts per Page",
        "info": "Number of pages ",
        "min": 1,
        "max": 5,
        "default": 3,
        "step": 1

      }, {
        "type": "checkbox",
        "id": "enable_description_preview",
        "label": "Enable Description Preview",
        "default": true,
        "info": "Check the box to make the description visible"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Read More"
      }
    ]

  }
{% endschema %}